@{
    ViewBag.Title = "Blogs";
}

<section class="content-header">
    <h1>
        Posts
    </h1>
</section>



<section class="content">
    <div class="box box-primary">
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">

                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="post in posts">
                        <td><a ng-href="/Blog/{{blogId}}/{{post.Id}}/{{post.UrlName}}" target="_blank">{{post.Title}}</a></td>
                        <td>{{post.PublishDate | date: 'MMM d, y HH:mm'}}</td>
                        <td>
                            <a href="Posts/Edit/{{post.Id}}" class="btn-sm btn-success">Edit</a>
                            <a href="" style="margin-left: 5px;" class="btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
